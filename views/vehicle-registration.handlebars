<section class="h-100 gradient-form" style="background-color: #4C4C4C;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-15">
          <div class="card rounded-3 text-black" style="background-color: #fff">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body p-md-5 mx-md-4">
  
                  <div class="text-center">
                    <h4 class="mt-5 mb-5 pb-1">Register your vehicle</h4>
                  </div>
                  <p>Please provide the following information:</p>
                  <form>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                    <input type="text" name="vehicle_make" id="vehicle-make" class="form-control input-sm" placeholder="Vehicle Make">
                        </div>
                        <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input type="text" name="vehicle_model" id="vehicle-model" class="form-control input-sm" placeholder="Vehicle Model">
                            </div>
                        </div></div>
                    </div>

                    <div class="form-group">
                        <label for="vehicles">Vehicle Type:</label>
                        <select name="vehicles" id="type">
                          <option value="Car">Car</option>
                          <option value="Truck">Truck</option>
                          <option value="SUV">SUV</option>
                          <option value="Convertible">Convertible</option>
                          <option value="Sedan">Sedan</option>
                          <option value="Sportscar">Sportscar</option>
                        </select>

                    </div>

                    
                    <div class="form-group">
                        <label for="conditions">Condition:</label>
                        <select name="conditions" id="condition">
                          <option value="New">New</option>
                          <option value="Used">Used</option>
                          <option value="Certified Pre-Owned">Certified Pre-Owned</option>
                          <option value="Does Not Run">Does Not Run</option>
                          <option value="Parts Only">Parts Only</option>
                        </select>

                    </div>

                    <div class="form-group">
                        <input type="text" name="year" id="year" class="form-control input-sm" placeholder="Year">
                    </div>

                    <div class="form-group">
                        <input type="text" name="color" id="color" class="form-control input-sm" placeholder="Color">
                    </div>

                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input type="text" name="vin" id="vin" class="form-control input-sm" placeholder="VIN">
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input type="text" name="price" id="price" class="form-control input-sm" placeholder="Price">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
			    		<div class="form-group">
			    			<input type="text" name="mileage" id="mileage" class="form-control input-sm" placeholder="Mileage">
			    	    </div></div>
                <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                        
			    			<textarea id="description" placeholder="Description"></textarea>
			    	    </div></div></div>
			    	</div>
                    <div class="text-center pt-1 mb-5 pb-1">
                        <button class="btn btn-primary btn-block fa-lg gradient-custom mb-3" id="register-button" type="submit">Register</button>
                    </div>

                </form>
  
                </div>
              </div>
              <div class="col-sm-6 d-flex align-items-center">
                  <img src="\images\TinLizzie Logo1.png" width="750px" alt="tinlizzielogo1">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="vehicleRegistration.js"></script>
